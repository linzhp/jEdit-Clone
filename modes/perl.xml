		</SPAN>

		<MARK_FOLLOWING TYPE="KEYWORD2">@</MARK_FOLLOWING>

		<SPAN TYPE="KEYWORD2" NO_LINE_BREAK="TRUE" DELEGATE="VARIABLE">
			<BEGIN>%{</BEGIN>
			<END>}</END>
		</SPAN>

		<MARK_FOLLOWING TYPE="KEYWORD2">%</MARK_FOLLOWING>

