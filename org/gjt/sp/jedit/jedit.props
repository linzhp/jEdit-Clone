###
### jEdit global properties
### By Slava Pestov <sp@gjt.org>
###

###
### GLOBAL SETTINGS
###

# Autosave interval in seconds, 0=off
autosave=15

# Number of recent files
recent=8

# Maximum number of elements in a history list
history=25

# Desktop saving toggle
saveDesktop=on

# Number of backups to make, 0=no backups
backups=1

# Backup directory
backup.directory=

# Backup filename prefix and suffix
backup.prefix=
backup.suffix=~

# Buffer list sorting
sortBuffers=off
sortByName=off

###
### BUFFER SETTINGS
### These can also be specified as buffer-local properties
###

# Line separator
# The OS default will be used if this is not specified
# Unix=\n
# Windows=\r\n
# MacOS=\r
#buffer.lineSeparator=\n

# Encoding
# The OS default will be used if this is not specified

# Tab width
buffer.tabSize=8

# Soft tabs
buffer.noTabs=no

# Auto indent
buffer.indentOnTab=off
buffer.indentOnEnter=on

# Default edit mode
buffer.defaultMode=text

# Maximum line length (for Format command)
buffer.maxLineLen=72

# Print margins (these cannot be set on a per-buffer basis currently.
# Not much point fixing this though)
buffer.margin.top=0.5
buffer.margin.left=0.5
buffer.margin.bottom=0.5
buffer.margin.right=0.5

# Syntax highlighting
buffer.syntax=on

###
### VIEW SETTINGS
###

# Show toolbar? (on/off)
view.showToolbar=on

# Show buffer tabs? (on/off)
view.showBufferTabs=on

# Buffer tabs position (1=top, 2=left, 3=bottom, 4=right)
view.bufferTabsPos=1

# Show full path in title bar? (on/off)
view.showFullPath=off

# Font
view.font=Monospaced
view.fontsize=14
# 0=plain, 1=bold, 2=italic, 3=boldItalic
view.fontstyle=0

# Background and foreground colors (for the text area)
view.bgColor=white
view.fgColor=black

# Line highlighting
view.lineHighlight=on
view.lineHighlightColor=#e0e0e0

# Bracket highlighting
view.bracketHighlight=on
view.bracketHighlightColor=black

# EOL markers
view.eolMarkers=on
view.eolMarkerColor=#009999

# Invalid lines
view.paintInvalid=on

# Caret color
view.caretColor=red

# Selection color
view.selectionColor=#ccccff

# Caret blinking
view.caretBlink=on

# Block caret
view.blockCaret=off

# Electric borders
view.electricBorders=3

# Smart home/end
view.homeEnd=yes

# Gutter width
view.gutter.width=40

# Gutter collapsed/expanded by default
view.gutter.collapsed=no

# Gutter displays line numbers
view.gutter.lineNumbers=yes

# Gutter line numbers are highlighted at this interval
view.gutter.highlightInterval=5

# Expand abbrevs when user finishes typing a word
view.expandOnInput=no

# Syntax styles
view.style.comment1=style:i
view.style.comment2=color:#990033 style:i
view.style.keyword1=style:b
view.style.keyword2=color:magenta
view.style.keyword3=color:#009600
view.style.label=color:#990033 style:b
view.style.literal1=color:#650099
view.style.literal2=color:#650099 style:b
view.style.operator=style:b
view.style.invalid=color:red style:b

