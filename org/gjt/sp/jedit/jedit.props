###
### jEdit global properties
### By Slava Pestov <sp@gjt.org>
###

###
### GLOBAL SETTINGS
###

# Autosave interval in seconds, 0=off
autosave=15

# Number of recent files
recent=8

# Maximum number of elements in a history list
history=25

# Desktop saving toggle
saveDesktop=true

# Number of backups to make, 0=no backups
backups=1

# Backup directory
backup.directory=

# Backup filename prefix and suffix
backup.prefix=
backup.suffix=~

# Buffer list sorting
sortBuffers=false
sortByName=false

###
### BUFFER SETTINGS
### These can also be specified as buffer-local properties
###

# Line separator
# The OS default will be used if this is not specified
# Unix=\n
# Windows=\r\n
# MacOS=\r
#buffer.lineSeparator=\n

# Encoding
# The OS default will be used if this is not specified
#buffer.encoding=latin1

# Tab width
buffer.tabSize=8

# Soft tabs
buffer.noTabs=false

# Auto indent
buffer.indentOnTab=false
buffer.indentOnEnter=true

# Default edit mode
buffer.defaultMode=text

# Undo queue size
buffer.undoCount=100

# Should files be tokenized on load?
buffer.tokenize=true

# Print margins (these cannot be set on a per-buffer basis currently.
# Not much point fixing this though)
buffer.margin.top=0.5
buffer.margin.left=0.5
buffer.margin.bottom=0.5
buffer.margin.right=0.5

# Syntax highlighting
buffer.syntax=true

###
### VIEW SETTINGS
###

# Show toolbar?
view.showToolbar=true

# Always show search bar, even when not in use?
view.showSearchbar=true

# Show buffer tabs?
view.showBufferTabs=true

# Buffer tabs position (1=top, 2=left, 3=bottom, 4=right)
view.bufferTabsPos=1

# Show full path in title bar?
view.showFullPath=false

# Check modification status on focus?
view.checkModStatus=true

# Font
view.font=Monospaced
view.fontsize=14
# 0=plain, 1=bold, 2=italic, 3=boldItalic
view.fontstyle=0

# Background and foreground colors (for the text area)
view.bgColor=#ffffff
view.fgColor=#000000

# Line highlighting
view.lineHighlight=true
view.lineHighlightColor=#e0e0e0

# Bracket highlighting
view.bracketHighlight=true
view.bracketHighlightColor=#000000

# EOL markers
view.eolMarkers=true
view.eolMarkerColor=#009999

# Invalid lines
view.paintInvalid=false

# Caret color
view.caretColor=#ff0000

# Selection color
view.selectionColor=#ccccff

# Caret blinking
view.caretBlink=true

# Block caret
view.blockCaret=false

# Electric borders
view.electricBorders=3

# Smart home/end
view.homeEnd=true

# Gutter background color
view.gutter.bgColor=#ffffff

# Gutter foreground color
view.gutter.fgColor=#8080c0

# Gutter highlight color
view.gutter.highlightColor=#000000

# Gutter current line highlight color
view.gutter.currentLineColor=#d04040

# Gutter border color
view.gutter.borderColor=#808080

# Gutter font name
view.gutter.font=Monospaced

# Gutter font style
# 0=plain, 1=bold, 2=italic, 3=boldItalic
view.gutter.fontstyle=0

# Gutter font size
view.gutter.fontsize=10

# Gutter width
view.gutter.width=40

# Gutter border width
view.gutter.borderWidth=4

# Gutter collapsed/expanded by default
view.gutter.collapsed=true

# Gutter displays line numbers
view.gutter.lineNumbers=true

# Line numbers are drawn with this alignment (left, center, right)
view.gutter.numberAlignment=right

# Gutter line numbers are highlighted at this interval
view.gutter.highlightInterval=5

# Gutter displays line numbers
view.gutter.highlightCurrentLine=true

# Expand abbrevs when user finishes typing a word
view.expandOnInput=false

# Syntax styles
view.style.comment1=color:#000000 bgColor:#cfcfcf style:i
view.style.comment2=color:#990033 bgColor:#cfcfcf style:i
view.style.literal1=color:#650099
view.style.literal2=color:#650099 style:b
view.style.keyword1=color:#000000 style:b
view.style.keyword2=color:#ff00ff
view.style.keyword3=color:#009600
view.style.function=color:#990033
view.style.markup=color:#5e5e5e style:b
view.style.label=color:#990033 bgColor:#cfcfcf style:b
view.style.operator=color:#000000 style:b
view.style.digit=color:#009191
view.style.invalid=color:#ff0000 style:b
